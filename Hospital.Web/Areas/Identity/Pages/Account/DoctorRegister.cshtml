@page
@using Hospital.Models
@model DoctorRegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Doctor</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter YOur Name" />
                <label asp-for="Input.Name">Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3">
                <select asp-for="Input.Gender" asp-items="@Html.GetEnumSelectList<Gender>()" class="form-control" aria-required="true">
                    <option value="-1">
                        Select Gender
                    </option>
                </select>
                <label asp-for="Input.Gender"></label>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DOB" class="form-control" aria-required="true" />
                <label asp-for="Input.DOB"></label>
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" aria-required="true" />
                <label asp-for="Input .Address"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <diy class="form-floating mb-3">
                <input asp-for="Input.Nationality" class="form-control" aria-required="true" />
                <label asp-for="Input.Nationality"></label>
                <span asp-validation-for="Input.Nationality" class="text-danger"></span>
            </diy>
            <div class="form-floating mb-3">
                <input asp-for="Input.Specialist" class="form-control" aria-required="true" />
                <label asp-for="Input.Specialist"></label>
                <span asp-validation-for="Input.Specialist" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>



            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.PictureUrl"></label>
                <input asp-for="Input.PictureUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="Input.PictureUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="row">
                    <div class="col-2">
                        <input type="checkbox" asp-for="Input. IsDoctor" class="form-check" />
                        <div class="col-10">
                            <label asp-for="Input. IsDoctor"></label>
                        </div>
                    </div>
                    <span asp-validation-for="Input.IsDoctor" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
